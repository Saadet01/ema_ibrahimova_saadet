<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grammar05Activity"
    android:background="@color/grammar_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/grammer_layout_margin"
        android:layout_marginEnd="@dimen/grammer_layout_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/rule_grammer05_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Felin hallari"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="35sp"
            android:textColor="@color/grammar_text_color"
            android:background="@color/grammar_titelbackground_color"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rule_grammer05_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rule_grammer05_verbcases_introduction"
            android:textStyle="italic"
            android:textColor="@color/grammar_text_color"
            android:background="@color/white"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/rule_grammer05_verbcases"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/verbcases" />

        <TextView
            android:id="@+id/rule_grammer05_exampleverbcases"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/grammar_text_color"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Qanuna uyqunsuzluqlar: \n\n Eger fe'lin kökü s,ß veya z ile bitirse:
         2ci halda -(e)st evezine -t \n Eger fe'lin kötü t,d,tm,chn,ffn ile bitirse:    2,3,5ci hallarda -est ve -et\n
Əks təqdirdə: -st, -t\n\n Bezi fe'llerin kötüde deyise bilir ve bunun ücün ümumi qayda yoxdur."/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu"
        android:background="@color/startbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="selected"
        app:itemIconSize="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>