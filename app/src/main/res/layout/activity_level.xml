<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelActivity"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/level_topimage"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/stars_level"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/level_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titel"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/textbluegreen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pfeilnachlinks"
            android:layout_gravity="center"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/level_viewpager"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pfeilwinkelrechts"
            android:layout_gravity="center"/>
    </LinearLayout>




</LinearLayout>